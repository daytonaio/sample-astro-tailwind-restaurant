---
import Layout from "../layouts/Layout.astro";
import Exterior from "../assets/exterior.jpg";
import Chef1 from "../assets/chef_1.jpg";
import Chef2 from "../assets/chef_2.jpeg";
import Chef3 from "../assets/chef_3.jpg";
---

<Layout>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-28">
        <h1 class="text-4xl font-bold text-center mb-8">
            About Our Restaurant
        </h1>

        {/* Restaurant Story Section */}
        <section class="mb-28">
            <h2 class="text-2xl font-semibold mb-2">Our Story</h2>
            <div class="grid md:grid-cols-2 gap-6 items-start justify-start">
                <div>
                    <p class="text-lg mb-4">
                        Founded in 2010, our restaurant has been serving
                        delightful culinary experiences for over a decade. What
                        started as a small family-owned bistro has grown into a
                        beloved local institution, known for its innovative
                        dishes and warm atmosphere.
                    </p>
                    <p class="text-lg">
                        Our passion for food, commitment to quality ingredients,
                        and dedication to exceptional service have been the
                        cornerstones of our success.
                    </p>
                </div>
                <div class="md:w-full mb-10 md:mb-0">
                    <div
                        class="relative h-64 md:h-96 rounded-lg overflow-hidden md:pl-14"
                    >
                        <img
                            src={Exterior.src}
                            alt="Grill & Thrill restaurant interior"
                            class="w-full h-full object-cover rounded-lg"
                        />
                    </div>
                </div>
            </div>
        </section>

        {/* Team Section */}
        <section class="mb-12">
            <h2 class="text-2xl font-semibold mb-4">Meet Our Team</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                {
                    [
                        {
                            name: "Sandeep Lamichanne",
                            role: "Head Chef",
                            image: Chef1 as ImageMetadata,
                        },
                        {
                            name: "Sunita Dangol",
                            role: "Sous Chef",
                            image: Chef2 as ImageMetadata,
                        },
                        {
                            name: "Ravi Lamichhane",
                            role: "Pastry Chef",
                            image: Chef3 as ImageMetadata,
                        },
                    ].map((member) => (
                        <div class="bg-white shadow-md rounded-lg overflow-hidden">
                            <div class="relative h-72 w-full">
                                <img
                                    src={member.image.src}
                                    alt={member.name}
                                    class="object-fill w-full h-72"
                                />
                            </div>
                            <div class="p-4">
                                <h3 class="text-xl font-semibold">
                                    {member.name}
                                </h3>
                                <span class="inline-block px-3 py-1 text-sm font-semibold text-orange-500 mt-2">
                                    {member.role}
                                </span>
                            </div>
                        </div>
                    ))
                }
            </div>
        </section>
        {/* Philosophy Section */}
        <section>
            <h2 class="text-2xl font-semibold mb-4">Our Philosophy</h2>
            <div class="bg-primary/10 p-6 rounded-lg">
                <ul class="list-disc list-inside space-y-2">
                    <li>Use only the freshest, locally-sourced ingredients</li>
                    <li>Create innovative dishes that surprise and delight</li>
                    <li>
                        Provide a warm, welcoming atmosphere for all our guests
                    </li>
                    <li>
                        Continuously evolve our menu to reflect seasonal
                        offerings
                    </li>
                    <li>
                        Maintain the highest standards of sustainability and
                        ethical practices
                    </li>
                </ul>
            </div>
        </section>
    </div>
</Layout>
